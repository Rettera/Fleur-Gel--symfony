{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<style>
.main{
    margin-top: 70px;
}

h1.title { 
    font-size: 50px;
    font-family: 'Passion One', cursive; 
    font-weight: 400; 
}

hr{
    width: 10%;
    color: #fff;
}

.form-group{
    margin-bottom: 15px;
}

label{
    margin-bottom: 15px;
}

input,
input::-webkit-input-placeholder {
    font-size: 11px;
    padding-top: 3px;
}

.main-login{
    background-color: #000;
    /* shadows and rounded borders */
    -moz-border-radius: 2px;
    -webkit-border-radius: 2px;
    border-radius: 2px;
    -moz-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
    -webkit-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
    box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);

}

.main-center{
    margin-top: 30px;
    margin: 0 auto;
    padding: 40px 40px;

}

.login-button{
    margin-top: 5px;
}

.login-register{
    font-size: 11px;
    text-align: center;
}
.input-group-addon{
    width:35px; 
    padding:1.5%;
}
</style>
     <div class="row main">
           
                <div class="main-login main-center" style="width: 40%;">
                    
                        {{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}
                        <h2>Veuillez indiquez vos informations</h2>
                        <h6><span>*</span>: champs obligatoire</h6>
                        {{ form_errors(registrationForm) }}
                        <div class="form-group">
                            {{ form_label(registrationForm.Pseudo, "*Pseudo", {'attr': {'class': 'cols-sm-2 control-label'}}) }}
                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>                 
        {{ form_widget(registrationForm.Pseudo, {'attr': {'class': 'form-control input-md'}}) }}
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(registrationForm.email, "*Adresse Mail", {'attr': {'class': 'cols-sm-2 control-label'}}) }}
                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(registrationForm.Name, "Nom Pr√©nom", {'attr': {'class': 'cols-sm-2 control-label'}}) }}
                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-users fa" aria-hidden="true"></i></span>
                                    {{ form_widget(registrationForm.Name, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(registrationForm.Profil, "URL image de profil", {'attr': {'class': 'cols-sm-2 control-label'}}) }}
                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-smile-o fa-lg" aria-hidden="true"></i></span>
                                    {{ form_widget(registrationForm.Profil, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                                    {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                       </div>

                        <div class="form-group main-center" style="width: 40%;">
                            <button type="submit" class="btn btn-primary btn-lg btn-block login-button">Envoyer</button>
                        </div>
                        <div class="login-register">
                            <a href="/login">Se connecter</a>
                         </div>
                          </div>
                    {{ form_end(registrationForm) }}
                
            </div>
{% endblock %}
